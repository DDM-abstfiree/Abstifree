<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Barra superior com ícones -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

        <!-- Ícone de Perfil -->
        <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icone_user_utilizador"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Profile Icon" />

        <!-- Ícone de Coração -->
        <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/heart_icone_com"
                app:layout_constraintEnd_toStartOf="@+id/cart_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                android:contentDescription="Heart Icon" />

        <!-- Ícone de Carrinho -->
        <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cart_icone_com"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Cart Icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Logo da empresa -->
    <ImageView
            android:id="@+id/company_logo"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/company_logo"
            app:layout_constraintTop_toBottomOf="@+id/top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Company Logo"
            android:layout_marginTop="16dp" />

    <!-- Título "Recomendados para você" -->
    <TextView
            android:id="@+id/recommended_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECOMENDADOS PARA VOCÊ"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/company_logo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

    <!-- Grid de produtos recomendados -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommended_products"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/recommended_title"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:layout_marginTop="8dp"
            android:padding="8dp" />

    <!-- Barra de navegação inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>

